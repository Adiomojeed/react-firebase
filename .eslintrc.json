{
	"extends": [
		"airbnb-base",
		"prettier",
		"prettier/react",
		"plugin:import/errors",
		"plugin:react/recommended",
		"plugin:jsx-a11y/recommended",
		"plugin:react-hooks/recommended"
	],
	"plugins": ["prettier", "react", "import", "jsx-a11y", "react-hooks"],
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"rules": {
		"no-var": 2,
		"semi": 0,
		"no-console": 1,
		"no-unused-expressions": 0,
		"no-plusplus": 2,
		"import/extensions": 0,
		"import/no-unresolved": 0
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
